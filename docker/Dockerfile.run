FROM cybera/jsp-zeek

WORKDIR /tmp

RUN apt update \
    && apt install -y linux-headers-$(uname -r) \
    && zkg autoconfig \
    && zkg install --force \
       zeek-af_packet-plugin \
       zeek-sniffpass \
       zeek-httpattacks \
    && cp /opt/zeek/share/zeek/site/local.zeek /opt/zeek/share/zeek/site/local.zeek.template \
    # Cleanup
    && rm -rf /tmp/* \
    && rm -rf /var/lib/apt/lists/*

COPY files/etc/* /opt/zeek/etc/
COPY files/init.sh /init.sh
COPY files/local.zeek* /opt/zeek/share/zeek/site/

VOLUME /opt/zeek/logs
VOLUME /opt/zeek/spool


CMD ["/init.sh"]
